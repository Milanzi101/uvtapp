{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Android",
            "program": "${workspaceFolder}/.vscode/launchReactNative.js",
            "type": "reactnative",
            "request": "launch",
            "platform": "android",
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/.vscode/.react",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug iOS",
            "program": "${workspaceFolder}/.vscode/launchReactNative.js",
            "type": "reactnative",
            "request": "launch",
            "platform": "ios",
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/.vscode/.react",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run expo",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["expo", "start"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "reactnative",
            "request": "attach",
            "name": "Attach to packager",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}